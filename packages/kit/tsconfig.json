{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@sveltejs/kit": ["./types/index"],
			// internal use only
			"types": ["./types/internal"]
		}
	},
	"include": ["scripts/**/*", "src/**/*", "types/**/*"],
	"exclude": ["src/packaging/test/fixtures/**/*", "src/packaging/test/watch/**/*"]
}
