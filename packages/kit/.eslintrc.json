{
	"root": true,
	"extends": "@sveltejs",
	"parserOptions": {
		"sourceType": "module"
	},
	"globals": {
		"goto": true,
		"invalidate": true,
		"prefetch": true,
		"prefetchRoutes": true,
		"beforeNavigate": true,
		"afterNavigate": true
	},
	"rules": {
		"no-restricted-properties": [
			"error",
			{ "property": "substr", "message": "Use .slice instead of .substr." },
			{ "object": "test", "property": "only", "message": "Do not check in test.only tests." }
		],
		"@typescript-eslint/no-empty-interface": "off"
	}
}
